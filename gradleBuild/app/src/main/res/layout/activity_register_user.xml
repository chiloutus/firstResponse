<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gradlebuild.app.util.RegisterUser" android:background="@drawable/carbon">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Forename" android:layout_alignParentTop="true" android:layout_alignRight="@+id/lastName"
            android:layout_alignEnd="@+id/lastName" android:id="@+id/firstName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastName" android:layout_below="@+id/firstNameText" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginTop="34dp" android:inputType="text"
            android:hint="Surname"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwd"
            android:layout_above="@+id/passwd2Text" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginBottom="29dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwd2"
            android:layout_above="@+id/button" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginBottom="87dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Forename"
            android:id="@+id/firstNameText" android:layout_alignTop="@+id/firstNameText" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Surname"
            android:id="@+id/lastnameText" android:layout_alignTop="@+id/lastName" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password"
            android:id="@+id/passwdText"
            android:layout_toStartOf="@+id/passwd"
            android:layout_alignTop="@+id/passwd" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Repeat Password"
              android:id="@+id/passwd2Text" android:layout_toStartOf="@+id/passwd"
              android:layout_alignBottom="@+id/passwd2" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/button"
            android:layout_marginBottom="32dp" android:onClick="submitButton" android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email"
            android:id="@+id/email"
            android:layout_marginTop="29dp" android:layout_below="@+id/lastName" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailIn" android:layout_alignTop="@+id/email" android:layout_alignRight="@+id/passwd"
            android:layout_alignEnd="@+id/passwd"/>
</RelativeLayout>
