<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/carbon">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/RPM"
            android:id="@+id/firstNameText" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="89dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Speed"
            android:id="@+id/lastnameText" android:layout_below="@+id/firstNameText" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="60dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/fuel"
            android:id="@+id/passwdText"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_above="@+id/lastnameText" android:layout_toRightOf="@+id/firstNameText"
            android:layout_toEndOf="@+id/firstNameText" android:id="@+id/rpm"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_alignTop="@+id/lastnameText"
            android:layout_toRightOf="@+id/passwdText" android:layout_toEndOf="@+id/passwdText" android:id="@+id/spd"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/passwdText"
            android:layout_toEndOf="@+id/passwdText" android:id="@+id/fl"/>
</RelativeLayout>